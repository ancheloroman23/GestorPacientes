@using GestorPacientes.Core.Application.ViewModels.ResultadoLab
@model ResultadoLabUpdateViewModel
@{
    ViewData["Title"] = "ResultadoLab";
}

<div class="d-flex justify-content-between bottom-line">
    <div>
        <h1 class="d-inline">Reportes de Laboratorio</h1>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-3">
    </div>
    <div class="col-md-6">
        <div class="card">
            <form asp-controller="ResultadoLab" asp-action="Result">
                <div class="card-header">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input asp-for="ResultadoLabId" type="hidden" class="form-control" />
                    <input asp-for="CitaId" type="hidden" class="form-control" />
                    <input asp-for="PruebaLabId" type="hidden" class="form-control" />
                    <input asp-for="Estado" type="hidden" value="Finalizado" class="form-control" />
                    <div class="form-group text-center">
                        Area de Registro
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="Resultado" class="control-label">Resultados</label>
                        <textarea asp-for="Resultado" class="form-control"></textarea>
                        <span asp-validation-for="Resultado" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group mt-2 text-center">
                        <input type="submit" value="Finalizar" class="btn btn-block btn-success col-6 mx-auto" />
                        <a asp-controller="ResultadoLab" asp-action="Index" class="btn btn-block btn-primary col-5 mx-auto">Regresar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@using GestorPacientes.Core.Application.ViewModels.Doctor
@model DoctorUpdateViewModel

@{
    ViewData["Title"] = "Doctores Eliminando";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h3 class="card-title">¿Quieres eliminar este Doctor?</h3>
        <dl class="row mt-3">
            <dt class="col-sm-4">Nombre Completo</dt>
            <dd class="col-sm-8">@Model.Nombre @Model.Apellido</dd>
            <dt class="col-sm-4">Cedula</dt>
            <dd class="col-sm-8">@Model.Cedula</dd>
        </dl>
        <div class="row">
            <form asp-action="Delete">
                <input type="submit" value="Aceptar" class="btn btn-danger col-5 mx-auto" />
                <a asp-action="Index" class="btn btn-primary col-5 mx-auto">Cancelar</a>
            </form>
        </div>
    </div>
</div>
@using GestorPacientes.Core.Application.ViewModels.Doctor
@model IEnumerable<DoctorViewModel>

@{
    ViewData["Title"] = "Doctores";
}

<div class="container">
    <div class="d-flex justify-content-between bottom-line">
        <div>
            <h1 class="d-inline">Doctores</h1>
        </div>
        <div>
            <a class="btn btn-primary m-2" asp-action="Create">Nuevo doctor</a>
        </div>
    </div>
</div>

<div class="container">
    @if (Model.Count() == 0)
    {
        <h3 class="mt-3 ml-2 fw-light">No hay doctores</h3>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card border-secondary">
                        <img src="/images/doctores/@item.Foto" class="card-img-top" style="height: 250px; object-fit: cover;" alt="@item.Nombre">
                        <div class="card-body">
                            <h5 class="card-title">
                                @Html.DisplayFor(modelItem => item.Nombre) @Html.DisplayFor(modelItem => item.Apellido)
                            </h5>
                            <p class="card-text">
                                <b>Cédula: </b>@Html.DisplayFor(modelItem => item.Cedula)<br />
                                <b>Email: </b>@Html.DisplayFor(modelItem => item.Email)<br />
                                <b>Teléfono: </b>@Html.DisplayFor(modelItem => item.Telefono)
                            </p>
                            <div class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.DoctorId" class="btn btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.DoctorId" class="btn btn-danger ml-2">Eliminar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
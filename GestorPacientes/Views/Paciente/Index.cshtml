@using GestorPacientes.Core.Application.ViewModels.Paciente
@model IEnumerable<PacienteViewModel>

@{
    ViewData["Title"] = "Paciente";
}

<div class="container">
    <div class="d-flex justify-content-between bottom-line">
        <div>
            <h1 class="d-inline">Paciente</h1>
        </div>
        <div>
            <a class="btn btn-primary m-2" asp-action="Create">Nuevo Paciente</a>
        </div>
    </div>
</div>

<div class="container">
    @if (Model.Count() == 0)
    {
        <h3 class="mt-3 text-muted">No hay pacientes registrados</h3>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-6 mb-4">
                    <div class="card">
                        <img src="/images/patiente/@item.Foto" style="height: 250px; object-fit: cover;" class="card-img-top" height="250" alt="@item.Nombre">
                        <div class="card-body">
                            <h5 class="card-title">@item.Nombre @item.Apellido</h5>
                            <p class="card-text"><strong>Cédula:</strong> @item.Cedula</p>
                            <p class="card-text"><strong>Fecha de nacimiento:</strong> @item.FechaNacimiento</p>
                            <p class="card-text"><strong>Dirección:</strong> @item.Direccion</p>
                            <p class="card-text"><strong>Celular:</strong> @item.Telefono</p>
                            <p class="card-text"><strong>Alergias:</strong> @item.Alergico - <strong>Fumador:</strong> @item.Fumador</p>
                            <div class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.PacienteId" class="btn btn-warning">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.PacienteId" class="btn btn-danger">Eliminar</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
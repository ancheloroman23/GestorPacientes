@using GestorPacientes.Core.Application.ViewModels.Cita
@model CitaViewModel

@{
    ViewData["Title"] = "Cita";
}

<div class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">¿Quieres eliminar esta cita?</h3>
            <dl class="row mt-4">
                <dt class="col-sm-4">Paciente</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Paciente.Nombre) @Html.DisplayFor(model => model.Paciente.Apellido)</dd>
                <dt class="col-sm-4">Fecha</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FechaCita)</dd>
            </dl>
            <div class="row">
                <form asp-action="Delete">
                    <input type="submit" value="Aceptar" class="btn btn-danger col-5 mx-auto" />
                    <a asp-action="Index" class="btn btn-primary col-5 mx-auto">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</div>
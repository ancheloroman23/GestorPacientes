@using GestorPacientes.Core.Application.ViewModels.Usuario
@model IEnumerable<UsuarioViewModel>

@{
    ViewData["Title"] = "Usuario";
}

<div class="container">
    <h1>@ViewData["Title"]</h1>
    <hr />
    <div class="row">
        <div class="col-md-12">
            @if (Model == null || !Model.Any())
            {
                <h3 class="text-center">No existen usuarios</h3>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Nombre</th>
                                <th>Apellido</th>
                                <th>Correo</th>
                                <th>Usuario</th>
                                <th>Tipo</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Nombre</td>
                                    <td>@item.Apellido</td>
                                    <td>@item.Email</td>
                                    <td>@item.NombreUsuario</td>
                                    <td>@item.TipoUsuario</td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@item.UsuarioId" class="btn btn-warning btn-sm">
                                            Editar
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.UsuarioId" class="btn btn-danger btn-sm ml-1">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
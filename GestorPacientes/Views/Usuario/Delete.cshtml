@using GestorPacientes.Core.Application.ViewModels.Usuario
@model UsuarioUpdateViewModel

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h1>@ViewData["Title"]</h1>

<section class="container">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Confirmación de eliminacion</h3>
            <dl class="row mt-4">
                <dt class="col-sm-4">Nombre Completo</dt>
                <dd class="col-sm-8">@Model.Nombre @Model.Apellido</dd>
                <dt class="col-sm-4">Usuario</dt>
                <dd class="col-sm-8">@Model.NombreUsuario</dd>
                <dt class="col-sm-4">Tipo de Usuario</dt>
                <dd class="col-sm-8">@Model.TipoUsuario</dd>
            </dl>
            <div class="row">
                <form asp-action="Delete">
                    <input type="submit" value="Aceptar" class="btn btn-danger col-5 mx-auto" />
                    <a asp-action="Index" class="btn btn-primary col-5 mx-auto">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
</section>